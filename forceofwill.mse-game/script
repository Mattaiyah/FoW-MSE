	else if type == "stone" then input := ""
}
card_cost :=
{
	if type == "jruler" and style == "Lapis Cluster" then input := "lapis_jruler_ass2.png"
	else if type == "ruler" and style == "Lapis Cluster" then input := "lapis_jruler_ass2.png"
